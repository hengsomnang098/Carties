@page
@model IdentityService.Pages.Login.Index

<div class="container my-5">
    <partial name="_ValidationSummary" />

    <div class="row justify-content-center">
        @if (Model.View.EnableLocalLogin)
        {
            <div class="col-12 col-md-8 col-lg-5 mb-4">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-primary text-white text-center">
                        <h3 class="mb-0">Login</h3>
                    </div>

                    <div class="card-body p-4">
                        <form asp-page="/Account/Login/Index" method="post">
                            <input type="hidden" asp-for="Input.ReturnUrl" />

                            <div class="mb-3">
                                <label asp-for="Input.Username" class="form-label"></label>
                                <input class="form-control" placeholder="Username" asp-for="Input.Username" autofocus />
                            </div>

                            <div class="mb-3">
                                <label asp-for="Input.Password" class="form-label"></label>
                                <input type="password" class="form-control" placeholder="Password" asp-for="Input.Password" autocomplete="off" />
                            </div>

                            @if (Model.View.AllowRememberLogin)
                            {
                                <div class="form-check mb-3">
                                    <input class="form-check-input" asp-for="Input.RememberLogin" />
                                    <label class="form-check-label" asp-for="Input.RememberLogin">
                                        Remember My Login
                                    </label>
                                </div>
                            }

                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <a asp-page="../Register/Index" asp-route-returnUrl="@Model.Input.ReturnUrl">
                                    New user? Register here
                                </a>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary" name="Input.Button" value="login">Login</button>
                                <button type="submit" class="btn btn-outline-secondary" name="Input.Button" value="cancel">Cancel</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        }

        @if (Model.View.VisibleExternalProviders.Any())
        {
            <div class="col-12 col-md-8 col-lg-5">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-secondary text-white text-center">
                        <h3 class="mb-0">External Login</h3>
                    </div>
                    <div class="card-body text-center p-4">
                        <ul class="list-inline mb-0">
                            @foreach (var provider in Model.View.VisibleExternalProviders)
                            {
                                <li class="list-inline-item m-1">
                                    <a class="btn btn-outline-secondary"
                                       asp-page="/ExternalLogin/Challenge"
                                       asp-route-scheme="@provider.AuthenticationScheme"
                                       asp-route-returnUrl="@Model.Input.ReturnUrl">
                                        @provider.DisplayName
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        }

        @if (!Model.View.EnableLocalLogin && !Model.View.VisibleExternalProviders.Any())
        {
            <div class="col-12 col-md-8 col-lg-5">
                <div class="alert alert-warning text-center mt-4">
                    <strong>Invalid login request</strong><br />
                    There are no login schemes configured for this request.
                </div>
            </div>
        }
    </div>
</div>
